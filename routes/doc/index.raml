                                                "required": true
                                            }
                                        },
                                        "area": {
                                            "type": "array",
                                            "required": true,
                                            "items": {
                                                "type": "string",
                                                "required": true
                                            }
                                        },
                                        "condition": {
                                            "type": "array",
                                            "required": false,
                                            "items": {
                                                "type": "string",
                                                "required": true
                                            }
                                        }
                                    }
                                }
                            }
                        
